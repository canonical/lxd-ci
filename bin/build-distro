#!/bin/sh
set -eu

# Check arguments
if [ "${1:-}" = "" ] || [ "${2:-}" = "" ] || [ "${3:-}" = "" ] || [ "${4:-}" = "" ] || [ "${5:-}" = "" ]; then
    echo "Usage: ${0} <yaml> <architecture> <type> <timeout> <target dir> [flags]"
    exit 1
fi

YAML=${1}
ARCH=${2}
TYPE=${3}
TIMEOUT=${4}
TARGET=${5}
shift 5

debug_logs() {
    set +e
    if [ -e "${TARGET}/rootfs/debootstrap/debootstrap.log" ]; then
        echo
        echo "Debootstrap log:"
        cat "${TARGET}/rootfs/debootstrap/debootstrap.log"
    fi
}

trap debug_logs EXIT HUP INT TERM

# Setup build directory.
CACHE_DIR="${TARGET}/cache"
mkdir -p "${CACHE_DIR}"

cp "${YAML}" "${TARGET}/image.yaml"
cd "${TARGET}"

# Get lxd-imagebuilder path and create a serial.
BUILDER=$(command -v lxd-imagebuilder)
SERIAL=$(date -u +%Y%m%d_%H%M)

# Build plain rootfs.
sudo "${BUILDER}" build-dir image.yaml rootfs \
    --cache-dir "${CACHE_DIR}" \
    --timeout "${TIMEOUT}" \
    -o image.serial="${SERIAL}" \
    "$@"

# Build container.
if echo "${TYPE}" | grep -q container; then
    sudo "${BUILDER}" pack-lxd image.yaml rootfs \
        --cache-dir "${CACHE_DIR}" \
        --timeout "${TIMEOUT}" \
        -o image.serial="${SERIAL}" \
        "$@"
fi

# Build VM.
if echo "${TYPE}" | grep -q vm; then
    sudo "${BUILDER}" pack-lxd image.yaml rootfs \
        --cache-dir "${CACHE_DIR}" \
        --timeout "${TIMEOUT}" \
        --vm \
        -o image.serial="${SERIAL}" \
        "$@"
fi

sudo rm -Rf rootfs
echo "${SERIAL}" > serial

# Calculate checksums for all files within a directory.
sha256sum * > SHA256SUMS
